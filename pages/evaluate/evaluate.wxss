/* pages/evaluate/evaluate.wxss */
ev-line{
  box-shadow: 1px 1px 1px 1px #ccc;
}
.ev-top{
  display:flex;
  padding:30rpx 25rpx;
  margin-top:3rpx; 
	font-family: MicrosoftYaHei;
  border-top:5rpx solid #ccc;
  border-bottom:1rpx solid #ccc;
}
.ev-top-img{
  width:80rpx;
  height:80rpx;
}
.evaluate-img{
  width:80rpx;
  height:80rpx;
}
.ev-top-txt{
  line-height:70rpx;
}
.ev-top-txt1{
  width: 104rpx;
	/* height: 26rpx; */
	font-size: 26rpx;
	/* line-height: 43rpx; */
	color: #333333;
  margin:0 22rpx 0 19rpx;
}
.ev-top-txt2{
  width: 78rpx;
	/* height: 26rpx; */
	font-size: 26rpx;
	/* line-height: 43rpx; */
	color: #999999;
}
.ev-top-start{
  line-height: 77rpx;
  margin-right:50rpx;
}
.ev-top-start van-icon{
  margin:5rpx;
}
.ev-textarea{
  font-size:26rpx;
  margin:10rpx 20rpx;
  border-bottom:1rpx solid #ccc;
} 
.upimgbox{
  width: 128rpx;
	height: 128rpx;
	border: dotted 2rpx #cccccc;
  margin-bottom:10rpx;

}
.upimg-icon{
  display:block;
  margin:0 25rpx;
}
.upimg-txt{
  display:block;
  width:100%;
  text-align: center;
  font-size:30rpx;
  padding-bottom:10rpx;
}
.anonymous{
  height:145rpx;
	line-height: 145rpx;
  padding:0 23rpx;
  border-bottom:10rpx solid #f5f5f5;
}
.anonymous icon{
  margin:10rpx;
}
.a-txt-box{
  display:inline-block;
  position:relative;
  top:-10rpx;
  height:24rpx;
  /* padding:38rpx 10rpx; */
}
.anonymous-txt{
  height: 24rpx;
	font-size: 24rpx;
	color: #999999;
}
.anonymous-txt:first-child{
  margin:0 200rpx 0 10rpx;
}

