  <view class="icon-box">
    <icon type="success" size="30"></icon>
    <view class="icon1">已评价</view>
    <view class="icon2">感谢您的评价</view>
  </view>
  <view class="content">
    <view class="left">留下更多反馈，帮助我们提供更好服务</view>
