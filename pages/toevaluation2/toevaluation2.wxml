    <view class="attitude-box">
      <view class="att-txt">服务态度</view>
      <view class="att-star">
        <van-icon name="star" size='40rpx' color="#e01616"/>
        <van-icon name="star" size='40rpx' color="#e01616"/>
        <van-icon name="star" size='40rpx' color="#e01616"/>
        <van-icon name="star" size='40rpx' color="#e01616"/>
